<article class="post">
  <header class="entry-header">
    <h1 class="entry-title"><%= link_to @post.title, refinery.blog_post_path(@post) %></h1>      
  </header>

  <%= render '/refinery/draft_page_message' unless @post.nil? or @post.live? -%>

  <div class="entry-content">
    <%= @post.body.html_safe %>
  </div>

  <%= render :partial => "/refinery/blog/shared/post_meta", locals: { post: @post } %>
  <%= render 'nav' if next_or_previous?(@post) %>
</article>
