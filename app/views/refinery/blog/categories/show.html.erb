<section class="selected-tag"><%=@category.title.html_safe %></section>

<section class="main">
  <% if @posts.any? %>
    <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
    <%= will_paginate @posts %>
  <% end %>
</section>

<aside class="sidebar">
  <%= render "/refinery/blog/shared/categories" %>
</aside>

<%= render "/refinery/content_page", :hide_sections => :body_content_title %>
