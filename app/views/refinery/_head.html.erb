<meta charset='<%= Rails.application.config.encoding %>' />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
<title><%= browser_title(yield(:title)) %></title>
<link rel="icon" type="image/png" href="<%= asset_path 'logo-64.png' %>" />
<meta name="description" content="<%= @meta.meta_description.present? ? @meta.meta_description : t('default_description') %>">
<%= raw %(<link rel="canonical" href="#{request.protocol}#{request.host_with_port}#{@canonical}" />) if @canonical.present? -%>
<%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
<meta property="og:url" content="<%= request.original_url %>" />
<meta property="og:title" content="<%= browser_title(yield(:title)) %>" />
<meta property="og:description" content="<%= @meta.meta_description.present? ? @meta.meta_description : t('default_description') %>" />
<meta property="og:image" content="<%= request.base_url %><%= asset_path 'logo-400.png' %>" />
<meta property="og:type" content="<%= content_for?(:og_type) ? yield(:og_type) : 'website' %>" />
<meta property="og:site_name" content="<%= Refinery::Core.site_name %>"/>
<meta name="google-site-verification" content="7LuT3UKpdbCnLJ0eCzMrQRmnrpY2vHXNuE8SsxGqgQQ" />

<%= yield :meta %>

<%= stylesheet_link_tag "application" %>
<link href='https://fonts.googleapis.com/css?family=Lora:400,400italic,700,700italic&subset=latin-ext,latin' rel='stylesheet' type='text/css'>
<%= yield :stylesheets %>

<%= render '/refinery/google_analytics' %>

<%= javascript_include_tag 'modernizr-min' %>
